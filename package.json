{
  "name": "file-appender",
  "version": "0.0.0-semantically-released",
  "description": "Pipe a list of files to a transform stream.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "mocha test/test.js -w",
    "test:single": "istanbul cover -x test/test.js _mocha -- -R spec test/test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodrigo-medeiros/file-appender.git"
  },
  "keywords": [
    "stream",
    "append",
    "files",
    "file"
  ],
  "author": "Rodrigo Medeiros <rodrigo.mangue@gmail.com> (https://github.com/rodrigo-medeiros)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rodrigo-medeiros/file-appender/issues"
  },
  "homepage": "https://github.com/rodrigo-medeiros/file-appender#readme",
  "devDependencies": {
    "bluebird": "^2.9.30",
    "commitizen": "1.0.5",
    "cz-conventional-changelog": "1.1.2",
    "expect.js": "^0.3.1",
    "ghooks": "0.3.2",
    "istanbul": "0.3.21",
    "mocha": "2.3.3",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single"
    }
  }
}
